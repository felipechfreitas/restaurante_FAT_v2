<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Recuperarconta">

    <include
        android:id="@+id/header"
        layout="@layout/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/txt_header_pg_recuperar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recuperar conta"
        android:textSize="30dp"
        android:textStyle="bold"
        android:fontFamily="@font/playfairdisplay_bold_wght"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        />

    <LinearLayout
        android:id="@+id/layout_recuperar_conta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/txt_header_pg_recuperar"
        >

        <EditText
            android:id="@+id/txt_email_recuperar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite o seu email"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/lato_regular"
            android:background="@drawable/edit_text_borda"
            android:padding="12dp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_acessar_tela"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Enviar email"
        android:textSize="20sp"
        android:backgroundTint="@color/btn_comeco"
        android:fontFamily="@font/playfairdisplay_bold_wght"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/layout_recuperar_conta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/btn_voltar"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Voltar"
        android:textSize="20sp"
        android:backgroundTint="@color/btn_criar"
        android:fontFamily="@font/playfairdisplay_bold_wght"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btn_acessar_tela"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

<!--    tela recuperar conta-->

</androidx.constraintlayout.widget.ConstraintLayout>